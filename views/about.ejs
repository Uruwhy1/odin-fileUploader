<div>
  <h2>Your Folders:</h2>
  <ul id="folder-list">
    <% folders.forEach(folder => { %>
    <li id="folder-<%= folder.id %>">
      <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
      <button class="delete-folder-btn" data-id="<%= folder.id %>">
        Delete
      </button>
      <form
        action="/folders/<%= folder.id %>/edit"
        method="POST"
        style="display: inline"
      >
        <input
          type="text"
          name="newName"
          placeholder="New folder name"
          required
          style="display: inline"
        />
        <button type="submit">Rename</button>
      </form>
    </li>
    <% }) %>
  </ul>
</div>
